{
  "name": "abb-clone",
  "private": true,
  "devDependencies": {
    "eslint": "^7.30.0",
    "husky": "^7.0.1",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.1",
    "prettier": "^2.3.2"
  },
  "scripts": {
    "lint": "lerna run lint",
    "tsc": "lerna run tsc",
    "format": "lerna run format",
    "bootstrap": "lerna bootstrap --ci --force-local",
    "bootstrap:prod": "lerna bootstrap --ci --force-local -- --only=prod",
    "bootstrap:install": "lerna bootstrap --force-local",
    "build": "lerna run build",
    "clean": "lerna clean -y",
    "ci:local": "sh scripts/ci:local.sh",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix --quiet"
    ],
    "*.{js,jsx,ts,tsx,css,scss,html}": [
      "prettier --write"
    ]
  }
}
